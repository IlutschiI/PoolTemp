<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lukas.pooltemp.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical"
    android:background="#C5CAE9"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollview">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="5"
        android:columnCount="3"
        android:layout_weight="2"
        >

        <!--    Chart    -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:layout_margin="2dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:layout_rowSpan="2"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="2dp">

            <Spinner
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"

                android:id="@+id/startDateSpinner"
                android:background="#FFFFFFFF"
                android:entries="@array/array_name">

            </Spinner>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="133dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/abc_ic_go_search_api_mtrl_alpha"
                android:tint="#757575"
                android:rotation="90"/>

            <Spinner
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginRight="10dp"
                android:background="#FFFFFFFF"
                android:id="@+id/endDateSpinner"
                android:entries="@array/array_name">

            </Spinner>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginTop="3dp"
                android:src="@drawable/abc_ic_go_search_api_mtrl_alpha"
                android:tint="#757575"
                android:rotation="90"/>

            <com.db.chart.view.LineChartView
                xmlns:chart="http://schemas.android.com/apk/res-auto"
                android:id="@+id/linechart"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="220dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="7dp"
                android:background="#ffffff"

                chart:chart_axisColor="#757575"
                chart:chart_labelColor="#757575">

            </com.db.chart.view.LineChartView>
        </android.support.v7.widget.CardView>

        <!--    aktuelle Temperatur    -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card2"
            android:layout_height="127.5dp"
            android:layout_margin="2dp"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_columnWeight="1"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5dp"
                android:text="aktuelle Temperatur"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="25°C"
                android:textSize="30sp"
                android:textStyle="bold"/>

        </android.support.v7.widget.CardView>
        <!--    gestrige Temperatur    -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card3"
            android:layout_columnWeight="1"
            android:layout_height="127.5dp"
            android:layout_margin="2dp"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5dp"
                android:text="gestrige Temperatur"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="21.5°C"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </android.support.v7.widget.CardView>

        <!--    höchste Temperatur    -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card5"
            android:layout_columnWeight="1"
            android:layout_height="127.5dp"
            android:layout_margin="2dp"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5dp"

                android:text="niedrigste Temperatur"
                android:textSize="17sp"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="22°C"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </android.support.v7.widget.CardView>

        <!--    niedrigste Temperatur    -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card6"
            android:layout_columnWeight="1"
            android:layout_height="127.5dp"
            android:layout_margin="2dp"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5dp"
                android:text="höchste Temperatur"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="29.2°C"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </android.support.v7.widget.CardView>

        <!--    other infos    -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_columnSpan="2"
            android:layout_rowSpan="1"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                android:id="@+id/mainTV" />
        </android.support.v7.widget.CardView>

    </GridLayout>
</ScrollView>

</LinearLayout>
