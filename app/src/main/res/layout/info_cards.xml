<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">
        <!--    aktuelle Temperatur    -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card2"
            android:layout_width="0dp"
            android:layout_height="127.5dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5dp"
                android:text="ausgewählte Temperatur"
                android:textSize="@dimen/cardTextSize" />

            <TextView
                android:id="@+id/tvSelctedTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:text="N/V"
                android:textSize="@dimen/cardContentTextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSelctedTempTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="N/V"
                android:textSize="@dimen/cardContentAdditionalTextSize"
                android:textStyle="normal" />

        </android.support.v7.widget.CardView>
        <!--    gestrige Temperatur    -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card3"
            android:layout_width="0dp"
            android:layout_height="127.5dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5dp"
                android:text="gestrige Temperatur"
                android:textSize="@dimen/cardTextSize" />

            <TextView
                android:id="@+id/tvYesterdayTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="N/V"
                android:textSize="@dimen/cardContentTextSize"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <!--    höchste Temperatur    -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card5"
            android:layout_width="0dp"
            android:layout_height="127.5dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5dp"

                android:text="niedrigste Temperatur"
                android:textSize="@dimen/cardTextSize"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvLowestTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="N/V"
                android:textSize="@dimen/cardContentTextSize"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <!--    niedrigste Temperatur    -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card6"
            android:layout_width="0dp"
            android:layout_height="127.5dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5dp"
                android:text="höchste Temperatur"
                android:textSize="@dimen/cardTextSize" />

            <TextView
                android:id="@+id/tvHighestTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="N/V"
                android:textSize="@dimen/cardContentTextSize"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>


    </LinearLayout>


    <!--    other infos    -->


</LinearLayout>