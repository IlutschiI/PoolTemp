<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_column="0"
    android:layout_row="1"
    android:layout_columnSpan="2"
    android:layout_rowSpan="1"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="2dp">



    <lecho.lib.hellocharts.view.LineChartView
        xmlns:chart="http://schemas.android.com/apk/res-auto"
        android:id="@+id/helloLinechart"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="230dp"
        android:layout_marginTop="7dp"
        android:paddingRight="0dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="80dp"
        android:background="#ffffff"
        chart:chart_axisColor="#757575"
        chart:chart_labelColor="#757575">

    </lecho.lib.hellocharts.view.LineChartView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="75dp"
        android:visibility="invisible"
        android:id="@+id/ttSeekbar"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardBackgroundColor="#CCBDBDBD"
        android:layout_marginBottom="78dp">

        <TextView
            android:id="@+id/ttSeekbarValue"
            android:layout_width="75dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:text=""/>

    </android.support.v7.widget.CardView>

    <SeekBar
        android:layout_width="match_parent"
        android:id="@+id/sbTime"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:progress="20"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="40dp"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:id="@+id/ttSeekbarEnd"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardBackgroundColor="#CCBDBDBD"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/ttSeekbarEndValue"
            android:layout_width="75dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:text="23:59"/>

    </android.support.v7.widget.CardView>

    <SeekBar
        android:layout_width="match_parent"
        android:id="@+id/sbTimeEnd"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="7dp"
        android:rotation="0"
        android:progress="30"
        android:maxHeight="2dp"
        android:progressDrawable="@drawable/seekbar_progress"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"/>



</android.support.v7.widget.CardView>

